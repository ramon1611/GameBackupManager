<?xml version="1.0" encoding="utf-8" ?>
<launcher xml:lang="en-us" id="com.ubi.uplay" name="UPlay" publisher="Ubisoft" disabled="false">
	<path type="default" name="mainDirectory"><![CDATA[%Programs-x86%\Ubisoft\Ubisoft Game Launcher]]></path>
	<path type="default" name="mainExe"><![CDATA[%mainDirectory%\Uplay.exe]]></path>
	<path type="default" name="gameDirectory"><![CDATA[%mainDirectory%\games]]></path>
	<path type="additional" name="gameConfiguration"><![CDATA[%mainDirectory%\cache\configuration\configurations]]></path>

	<argument type="start" standalone="false"><![CDATA[<none>]]></argument>
	<argument type="shutdown" standalone="false"><![CDATA[<none>]]></argument>
	<argument type="launchGame" standalone="true"><![CDATA[start uplay://launch/%id%/0]]></argument>
	<argument type="restoreBackup" standalone="false"><![CDATA[<none>]]></argument>

	<backup method="manual" />
</launcher>