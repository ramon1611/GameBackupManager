<?xml version="1.0" encoding="utf-8" ?>
<launcher xml:lang="en-us" id="com.steampowered.steam" name="Steam" publisher="Valve">
	<path type="default" name="mainDirectory"><![CDATA[%Programs-x86%\Steam]]></path>
	<path type="default" name="mainExe"><![CDATA[%mainDirectory%\Steam.exe]]></path>
	<path type="default" name="gameDirectory"><![CDATA[%mainDirectory%\steamapps\common]]></path>

	<argument type="start" standalone="false"><![CDATA[<none>]]></argument>
	<argument type="shutdown" standalone="false"><![CDATA[-shutdown]]></argument>
	<argument type="launchGame" standalone="false"><![CDATA[-applaunch %id%]]></argument>
	<argument type="restoreBackup" standalone="false"><![CDATA[-install %backupPath%]]></argument>

	<backup method="integrated" />
</launcher>